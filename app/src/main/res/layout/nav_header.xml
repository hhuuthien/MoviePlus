<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText, SpUsage, ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <ImageView
        android:id="@+id/nh_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_accent" />

    <TextView
        android:layout_toEndOf="@id/nh_image"
        android:layout_alignBottom="@id/nh_image"
        android:layout_marginStart="8dp"
        android:id="@+id/nh_appname"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent2" />
</RelativeLayout>