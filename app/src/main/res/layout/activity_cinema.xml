<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:text="Cụm rạp: "
        android:textColor="@color/colorBlueDark"
        android:textSize="14dp" />

    <Spinner
        android:id="@+id/recyclerView_spinner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@id/tp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_cinema"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/recyclerView_text"
        android:layout_below="@id/recyclerView_spinner"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/recyclerView_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:text="Tìm thấy tất cả 000 rạp chiếu phim"
        android:textColor="@color/colorBlueDark"
        android:textSize="10dp" />
</RelativeLayout>