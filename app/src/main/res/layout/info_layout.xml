<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/info_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/logo_blue" />

        <TextView
            android:id="@+id/info_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/app_name"
            android:textColor="@color/colorBlueDark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_app_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_app_name"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="12dp"
            android:text="Movie Plus cung cấp thông tin về phim ảnh, chương trình truyền hình, diễn viên, nhân vật, nhà sản xuất điện ảnh và mọi thứ khác về điện ảnh thế giới."
            android:textSize="12dp" />

        <TextView
            android:id="@+id/info_app_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_app_text1"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Dữ liệu được cung cấp bởi The Movie DB\nwww.themoviedb.org"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/info_app_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_app_text2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="Phiên bản hiện tại: 1.6 (18/11/2019)"
            android:textSize="12dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_app_text3"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/info_app_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Mọi chi tiết xin liên hệ: Huỳnh Hữu Thiện"
                    android:textColor="@color/colorBlueDark"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/info_app_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_app_text4"
                    android:layout_margin="8dp"
                    android:text="Email: hhuuthien@gmail.com"
                    android:textColor="@color/colorBlueDark"
                    android:textSize="12dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_card"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/info_image2"
                android:layout_width="136dp"
                android:layout_height="54dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/power_by_tmdb" />

            <ImageView
                android:id="@+id/info_image3"
                android:layout_width="136dp"
                android:layout_height="54dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/info_image2"
                android:padding="2dp"
                android:src="@drawable/power_by_firebase" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>