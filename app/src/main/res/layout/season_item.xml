<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/colorBlueDark"
    android:elevation="2dp"
    android:outlineProvider="paddedBounds"
    tools:ignore="SpUsage,ContentDescription">

    <ImageView
        android:id="@+id/ss_poster"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/ss_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ss_poster"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/ss_poster"
        android:textColor="@color/colorAccent2"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/ss_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ss_number"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/ss_poster"
        android:textColor="@color/colorWhite"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/ss_num_ep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ss_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/ss_poster"
        android:textColor="@color/colorAccent2"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/ss_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ss_num_ep"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/ss_poster"
        android:textColor="@color/colorAccent2"
        android:textSize="10dp" />
</RelativeLayout>