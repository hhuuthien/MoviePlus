<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText, SpUsage, ContentDescription"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/dc_bio"
            android:gravity="center_vertical"
            android:text=""/>

        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:id="@+id/dc_birthday"
            android:layout_below="@id/dc_bio"
            android:text=""/>

        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/dc_birthplace"
            android:layout_below="@id/dc_birthday"
            android:text=""/>

        <ProgressBar
            android:id="@+id/dc_loading_1"
            android:layout_margin="12dp"
            android:theme="@style/MyProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
</ScrollView>