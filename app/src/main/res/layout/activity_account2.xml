<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/splash_head"
    android:paddingLeft="24dp"
    android:paddingTop="56dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    tools:ignore="ContentDescription, Autofill, HardcodedText, SpUsage">

    <ImageView
        android:id="@+id/acc2_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo_blue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/acc2_logo"
        android:layout_alignBottom="@id/acc2_logo"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/acc2_logo"
        android:fontFamily="@font/gg_bold"
        android:gravity="center_vertical"
        android:text="Chào bạn!"
        android:textColor="@color/colorPrimary"
        android:textSize="26dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acc2_logo"
        android:layout_margin="12dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/acc2_login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/gg_medium"
                android:text="Đăng nhập"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <Button
                android:id="@+id/acc2_signup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/acc2_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/gg_medium"
                android:text="Tạo tài khoản"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>