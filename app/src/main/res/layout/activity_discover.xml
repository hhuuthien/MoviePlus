<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lbg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark"
    tools:context=".DiscoverActivity"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:id="@+id/dis_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <Spinner
            android:id="@+id/dis_spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:backgroundTint="@color/colorWhite"
            android:fontFamily="@font/gg_regular"
            android:gravity="center_vertical"
            android:textSize="14dp" />

        <Spinner
            android:id="@+id/dis_spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toEndOf="@id/dis_spinner1"
            android:backgroundTint="@color/colorWhite"
            android:fontFamily="@font/gg_regular"
            android:gravity="center_vertical"
            android:textSize="14dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/discover_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dis_spinner"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/discover_progress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/dis_spinner"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:theme="@style/MyProgressBar" />

    <TextView
        android:id="@+id/discover_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dis_spinner"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/ic_error"
        android:drawablePadding="5dp"
        android:fontFamily="@font/gg_regular"
        android:text="Không tìm thấy dữ liệu"
        android:textAlignment="center"
        android:textColor="@color/colorAccent2"
        android:textSize="12dp" />
</RelativeLayout>