<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark"
    tools:context=".DetailShowActivity"
    tools:ignore="HardcodedText, SpUsage, ContentDescription">

    <RelativeLayout
        android:id="@+id/ds_layout_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ds_poster"
            android:layout_width="130dp"
            android:layout_height="195dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent2"
            android:padding="1dp"
            android:src="@drawable/logo_accent" />

        <TextView
            android:id="@+id/ds_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ds_poster"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/ds_poster"
            android:gravity="bottom"
            android:lineSpacingMultiplier="1.2"
            android:text="Show tittle"
            android:textColor="@color/colorWhite"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ds_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ds_title"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/ds_poster"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ds_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ds_navigation"
        android:layout_below="@id/ds_layout_poster" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/ds_navigation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:elevation="4dp"
        app:itemIconTint="@color/colorAccent2"
        app:itemTextColor="@color/colorAccent2"
        app:menu="@menu/navigation_for_show" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ds_fab_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ds_navigation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/youtube" />
</RelativeLayout>