<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailShowActivity"
    tools:ignore="HardcodedText, SpUsage, ContentDescription">

    <RelativeLayout
        android:background="@android:color/white"
        android:id="@+id/ds_layout_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ds_backdrop"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/logo_accent" />

        <ImageView
            android:id="@+id/ds_backdrop_bg"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/bg" />

        <ImageView
            android:id="@+id/ds_poster"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="120dp"
            android:background="#FFFFFF"
            android:padding="2dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/logo_accent" />

        <TextView
            android:id="@+id/ds_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ds_backdrop"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/ds_poster"
            android:text="Show tittle"
            android:textColor="@color/colorBlueDark"
            android:textSize="18dp"/>

        <RelativeLayout
            android:id="@+id/slayout_1"
            android:layout_toEndOf="@id/ds_poster"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/ds_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/slay1"
                android:layout_alignParentStart="true"
                android:layout_width="40dp"
                android:layout_centerVertical="true"
                android:layout_height="40dp">

                <com.timqi.sectorprogressview.ColorfulRingProgressView
                    android:id="@+id/ds_score"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:bgColor="@color/colorAccent2"
                    app:fgColorEnd="@color/colorPrimaryDark"
                    app:fgColorStart="@color/colorPrimary"
                    app:percent="0"
                    app:startAngle="0"
                    app:strokeWidth="3dp" />
                <TextView
                    android:id="@+id/ds_score_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ds_score"
                    android:layout_alignBottom="@id/ds_score"
                    android:layout_alignStart="@id/ds_score"
                    android:layout_alignEnd="@id/ds_score"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorBlueDark"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_toEndOf="@id/slay1"
                android:layout_toStartOf="@id/slay3"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ds_genre_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="11dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/slay3"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ds_trailer"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/youtube"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slayout_2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ds_poster"
            android:layout_below="@id/slayout_1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ds_love"
                android:layout_marginEnd="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_no" />

            <ImageView
                android:id="@+id/ds_add"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ds_love"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"/>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:background="@android:color/white"
        android:id="@+id/ds_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ds_navigation"
        android:layout_below="@id/ds_layout_poster" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/ds_navigation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        app:elevation="4dp"
        app:itemIconTint="@color/colorAccent2"
        app:itemTextColor="@color/colorAccent2"
        android:background="@color/colorPrimary"
        app:menu="@menu/navigation_for_show" />
</RelativeLayout>