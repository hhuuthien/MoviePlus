<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    tools:ignore="SpUsage,ContentDescription">

    <TextView
        android:id="@+id/ep_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ep_title"
        android:layout_alignBottom="@id/ep_date"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/gg_bold"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ep_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/ep_num"
        android:fontFamily="@font/gg_bold"
        android:textColor="@color/colorWhite"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/ep_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ep_title"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/ep_num"
        android:drawableStart="@drawable/ic_date3"
        android:drawablePadding="5dp"
        android:fontFamily="@font/gg_regular"
        android:textColor="@color/colorAccent2"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/ep_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ep_date"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gg_regular"
        android:textColor="@color/colorAccent2"
        android:textSize="12dp" />
</RelativeLayout>