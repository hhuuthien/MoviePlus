<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    tools:ignore="SpUsage,ContentDescription">

    <androidx.cardview.widget.CardView
        android:id="@+id/mrow_poster_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/mrow_poster"
            android:layout_width="90dp"
            android:layout_height="135dp"
            android:background="@color/colorAccentDark"
            android:src="@drawable/logo_accent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mrow_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mrow_poster_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/mrow_poster_parent"
        android:fontFamily="@font/gg_bold"
        android:textColor="@color/colorWhite"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/mrow_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mrow_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/mrow_poster_parent"
        android:ellipsize="end"
        android:fontFamily="@font/gg_regular"
        android:maxLines="3"
        android:textColor="@color/colorAccent2"
        android:textSize="10dp" />
</RelativeLayout>