<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cinema_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark"
    tools:context=".DetailCinemaActivity"
    tools:ignore="HardcodedText,SpUsage">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/deci_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_accent"
        app:civ_border_color="@color/colorAccent2"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/deci_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/deci_image"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/deci_image"
        android:gravity="bottom"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deci_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deci_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/deci_image"
        android:drawableStart="@drawable/ic_place2"
        android:drawablePadding="5dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/colorWhite"
        android:textSize="12dp" />

    <FrameLayout xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/deci_image"
        android:layout_margin="15dp">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapViewCine"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            mapbox:mapbox_cameraTargetLat="0"
            mapbox:mapbox_cameraTargetLng="0"
            mapbox:mapbox_cameraZoom="22" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mapView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/deci_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/deci_suat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/deci_info"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:lineSpacingMultiplier="1.2"
                android:text="Ứng dụng chưa hỗ trợ xem lịch chiếu của rạp này."
                android:textColor="@color/colorWhite"
                android:textSize="12dp" />

            <Button
                android:id="@+id/deci_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deci_suat"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:text="Truy cập website"
                android:textAllCaps="false" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>