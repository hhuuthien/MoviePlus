<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription, HardcodedText, SpUsage, Autofill">

        <RelativeLayout
            android:id="@+id/flm_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/flm_1_image"
                android:scaleType="centerCrop"
                android:src="@drawable/marvel"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <ImageView
                android:id="@+id/flm_1_image_bg"
                android:src="@drawable/bg_backdrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/flm_1_text"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Vũ trụ điện ảnh Marvel"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                tools:ignore="SpUsage" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flm_2"
            android:layout_below="@id/flm_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/flm_2_image"
                android:scaleType="centerCrop"
                android:src="@drawable/vietnam"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <ImageView
                android:id="@+id/flm_2_image_bg"
                android:src="@drawable/bg_backdrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/flm_2_text"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phim Việt Nam nổi bật"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                tools:ignore="SpUsage" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flm_3"
            android:layout_below="@id/flm_2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/flm_3_image"
                android:scaleType="centerCrop"
                android:src="@drawable/pixar"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <ImageView
                android:id="@+id/flm_3_image_bg"
                android:src="@drawable/bg_backdrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/flm_3_text"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phim hoạt hình Pixar"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                tools:ignore="SpUsage" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/flm_4"
            android:layout_below="@id/flm_3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/flm_4_image"
                android:scaleType="centerCrop"
                android:src="@drawable/oscar"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <ImageView
                android:id="@+id/flm_4_image_bg"
                android:src="@drawable/bg_backdrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/flm_4_text"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Giải Oscars\ncho phim hoạt hình xuất sắc nhất"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                tools:ignore="SpUsage" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>