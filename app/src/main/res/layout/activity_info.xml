<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:ignore="HardcodedText,SpUsage">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/gg_bold"
            android:text="Giới thiệu"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gg_regular"
            android:lineSpacingMultiplier="1.2"
            android:text="Đây là phần giới thiệu ứng dụng."
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/gg_bold"
            android:text="Phiên bản"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text3_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/gg_regular"
            android:lineSpacingMultiplier="1.2"
            android:text="Số phiên bản: 2.1"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3_5"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gg_regular"
            android:lineSpacingMultiplier="1.2"
            android:text="• Thêm tính năng: Rạp chiếu phim, Tin tức điện ảnh.\n• Thêm nội dung cho movie: điểm IMDb, điểm Metacritic, đạo diễn, thể loại, doanh thu (từ Box Office Mojo).\n• Cải tiến giao diện, phông chữ, chế độ tối.\n• Cải tiến nội dung, hình ảnh tiếng Việt."
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/gg_bold"
            android:text="Tác giả"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gg_regular"
            android:lineSpacingMultiplier="1.2"
            android:text="Huỳnh Hữu Thiện\nhhuuthien@gmail.com"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/text6"
            android:layout_margin="12dp"
            android:src="@drawable/power_by_tmdb" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/img1"
            android:layout_toEndOf="@id/img1"
            android:src="@drawable/power_by_firebase" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/img2"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/img2"
            android:src="@drawable/mapbox" />
    </RelativeLayout>
</ScrollView>