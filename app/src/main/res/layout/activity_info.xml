<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:ignore="HardcodedText,SpUsage">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:text="Giới thiệu"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Đây là phần giới thiệu ứng dụng."
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:text="Phiên bản"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Số phiên bản: 2.1"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3_5"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Thêm thông tin các rạp chiếu phim và tin tức điện ảnh.\nCải thiện giao diện tối.\nHỗ trợ nội dung tiếng Việt.\nSửa một số lỗi nhỏ."
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:text="Tác giả"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:lineSpacingMultiplier="1.2"
            android:text="Huỳnh Hữu Thiện\nhhuuthien@gmail.com"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/text6"
            android:layout_margin="12dp"
            android:src="@drawable/power_by_tmdb" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/img1"
            android:layout_toEndOf="@id/img1"
            android:src="@drawable/power_by_firebase" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/img2"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/img2"
            android:src="@drawable/mapbox" />
    </RelativeLayout>
</ScrollView>