<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acc_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/splash_head_dark"
    android:paddingStart="18dp"
    android:paddingTop="36dp"
    android:paddingEnd="18dp"
    tools:context=".AccountActivity"
    tools:ignore="SpUsage, UselessParent, HardcodedText">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/acc_info_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo_blue"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/acc_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/acc_info_image"
        android:layout_alignBottom="@id/acc_info_image"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/acc_info_image"
        android:fontFamily="@font/gg_bold"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:textSize="22dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/acc_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/acc_navigation"
        android:layout_below="@id/acc_info_name" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/acc_navigation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:elevation="4dp"
        app:itemIconTint="@color/colorAccent2"
        app:itemTextColor="@color/colorAccent2"
        app:menu="@menu/navigation_for_acc" />
</RelativeLayout>