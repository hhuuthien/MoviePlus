<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acc_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlueDark"
    tools:context=".AccountActivity"
    tools:ignore="SpUsage, UselessParent, HardcodedText">

    <RelativeLayout
        android:id="@+id/acc_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorBlueDark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/acc_info_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:src="@drawable/logo_accent" />

        <RelativeLayout
            android:id="@+id/acc_info_nameAndEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/acc_info_image">

            <TextView
                android:id="@+id/acc_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Xin chÃ o!"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/acc_info_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/acc_info_name"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Email"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/acc_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/acc_navigation"
        android:layout_below="@id/acc_info_layout" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/acc_navigation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:elevation="4dp"
        app:itemIconTint="@color/colorAccent2"
        app:itemTextColor="@color/colorAccent2"
        app:menu="@menu/navigation_for_acc" />
</RelativeLayout>