<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cr_poster"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/logo_accent" />

    <TextView
        android:id="@+id/cr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cr_poster"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/cr_poster"
        android:fontFamily="@font/gg_regular"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/cr_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cr_name"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/cr_poster"
        android:fontFamily="@font/gg_regular"
        android:textColor="@color/colorAccent2"
        android:textSize="12dp"
        tools:ignore="SpUsage" />
</RelativeLayout>