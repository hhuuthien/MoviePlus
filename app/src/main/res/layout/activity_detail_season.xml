<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlueDark"
    tools:context=".DetailSeasonActivity"
    tools:ignore="HardcodedText, SpUsage, ContentDescription">

    <ImageView
        android:id="@+id/blurImageViewSS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/blurImageViewSS2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_blur" />

    <RelativeLayout
        android:id="@+id/dss_layout_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/dss_poster_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/dss_poster"
                android:layout_width="130dp"
                android:layout_height="195dp"
                android:src="@drawable/logo_blue" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dss_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dss_poster_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/dss_poster_parent"
            android:gravity="bottom"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/colorWhite"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dss_title_ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dss_title"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/dss_poster_parent"
            android:gravity="bottom"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dss_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dss_title_ss"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/dss_poster_parent"
            android:drawableStart="@drawable/ic_date2"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dss_list_eps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dss_layout_poster"
        android:layout_margin="13dp"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/dss_loading_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/dss_layout_poster"
        android:layout_centerHorizontal="true"
        android:layout_margin="13dp"
        android:theme="@style/MyProgressBar" />
</RelativeLayout>