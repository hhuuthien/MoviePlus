<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark"
    tools:context=".DetailSeasonActivity"
    tools:ignore="HardcodedText, SpUsage, ContentDescription">

    <RelativeLayout
        android:id="@+id/dss_layout_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dss_poster"
            android:layout_width="130dp"
            android:layout_height="195dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent2"
            android:padding="1dp"
            android:src="@drawable/logo_accent" />

        <TextView
            android:id="@+id/dss_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dss_poster"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/dss_poster"
            android:gravity="bottom"
            android:lineSpacingMultiplier="1.2"
            android:text="Title"
            android:textColor="@color/colorWhite"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dss_title_ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dss_title"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/dss_poster"
            android:gravity="bottom"
            android:lineSpacingMultiplier="1.2"
            android:text="Tittle 2"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dss_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dss_title_ss"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/dss_poster"
            android:drawableStart="@drawable/ic_date2"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:textSize="12dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dss_list_eps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dss_layout_poster"
        android:layout_margin="13dp"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/dss_loading_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/dss_layout_poster"
        android:layout_centerHorizontal="true"
        android:layout_margin="13dp"
        android:theme="@style/MyProgressBar" />
</RelativeLayout>