<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/m_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Theme.MaterialComponents"
        app:popupTheme="@style/Theme.MaterialComponents"
        app:titleTextAppearance="@style/ToolbarStyle" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_toolbar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:checked="false"
        android:fontFamily="@font/gg_regular"
        android:padding="8dp"
        android:text="Ưu tiên nội dung quốc tế"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        app:thumbTint="@color/colorWhite"
        app:trackTint="@color/colorAccentDark"
        app:useMaterialThemeColors="false"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/switch_eng_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_eng"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gg_regular"
        android:lineSpacingMultiplier="1.1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Khi bật tính năng này, Movius sẽ ưu tiên tìm và hiển thị nội dung gốc. Khi tắt tính năng này, Movius sẽ ưu tiên tìm và hiển thị nội dung tiếng Việt."
        android:textColor="@color/colorAccentDark"
        android:textSize="10dp"
        tools:ignore="HardcodedText,SpUsage" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_eng_info"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:checked="true"
        android:fontFamily="@font/gg_regular"
        android:padding="8dp"
        android:text="Dùng hình ảnh chất lượng cao"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        app:thumbTint="@color/colorWhite"
        app:trackTint="@color/colorAccentDark"
        app:useMaterialThemeColors="false"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/switch_size_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_size"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gg_regular"
        android:lineSpacingMultiplier="1.1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Hình ảnh chất lượng cao sẽ giúp ứng dụng hiển thị đẹp hơn, tuy nhiên sẽ mất nhiều thời gian tải hơn và chiếm nhiều bộ nhớ hơn.\nTính năng này chỉ ảnh hưởng đến hình ảnh hiển thị trên ứng dụng. Khi tải ảnh về máy, chất lượng ảnh luôn là tốt nhất."
        android:textColor="@color/colorAccentDark"
        android:textSize="10dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/switch_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_size_info"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gg_regular"
        android:padding="8dp"
        android:text="Khôi phục cài đặt mặc định"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/switch_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_default"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/gg_regular"
        android:padding="8dp"
        android:text="Xoá dữ liệu bộ nhớ đệm"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/switch_cache_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_cache"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gg_regular"
        android:lineSpacingMultiplier="1.1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Xoá dữ liệu bộ nhớ đệm sẽ tạm thời giải phóng một phần bộ nhớ cho thiết bị của bạn. Tuy nhiên những dữ liệu này vẫn sẽ được tải lại trong những lần sử dụng sau này. Chỉ nên xoá đối với những thiết bị có dung lượng bộ nhớ hạn chế."
        android:textColor="@color/colorAccentDark"
        android:textSize="10dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/switch_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_cache_info"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/gg_regular"
        android:padding="8dp"
        android:text="Đi đến cài đặt thiết bị"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        tools:ignore="HardcodedText,SpUsage" />
</RelativeLayout>